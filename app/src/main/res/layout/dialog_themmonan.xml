<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="20dp"
        android:background="#f2f2f2"
        android:gravity="center"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_poly_merchant_xml" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_tenmonan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_add_text"
            android:fontFamily="@font/icielplanton"
            android:hint="Tên món ăn"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_giamoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_add_text"
            android:fontFamily="@font/icielplanton"
            android:hint="Giá món ăn"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btn_xacnhan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/icielplanton"
            android:text="Xác nhận"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>